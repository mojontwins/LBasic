print "Tienes cebolla"
:skip_cebolla

items hasnt "tomate" :skip_tomate
print "Tienes tomate"
:skip_tomate

items hasnt "revista" :skip_revista
print "Tienes revista"
:skip_revista

print "Y ya"


pause
