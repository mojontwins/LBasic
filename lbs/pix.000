mode "gfx_dbl"
color 15 1
pix "ACANTIL.PIX" dbl
print "UNA HAMBURGUESA"

items reset

menu reset
menu config 10 10 20 0 7
menu put "Coger cebolla"
menu put "Coger tomate"
